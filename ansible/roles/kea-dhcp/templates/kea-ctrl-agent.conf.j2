{
"Control-agent": {
    "http-host": "{{ ansible_host }}",
    "http-port": {{ ha_port }},
    "control-sockets": {
        "dhcp4": {
            "socket-type": "unix",
            "socket-name": "/run/kea/kea4-ctrl-socket"
        }
    },
    "authentication": {
        "type": "basic",
        "realm": "Kea Control Agent",
        "directory": "/etc/kea",
        "clients": [
            {
                "user": "admin",
                "password": "password",
                "roles": [ "admin" ]
            }
        ]
    },
    "loggers": [
        {
            "name": "kea-ctrl-agent",
            "output_options": [
                {
                    "output": "stdout",
                    "pattern": "%-5p %m\n"
                }
            ],
            "severity": "INFO",
            "debuglevel": 0
        }
    ]
}
}