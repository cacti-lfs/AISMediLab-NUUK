vrrp_script chk_sshd {
    script "pidof sshd"
    interval 2
    weight 2
}

vrrp_instance VI_1 {
    state {{ keepalived_state }}
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority {{ keepalived_priority }}
    advert_int 1

    authentication {
        auth_type PASS
        auth_pass 1111 # Change Ã§a pour la prod
    }

    virtual_ipaddress {
        {{ keepalived_vip }}/24
    }

    track_script {
        chk_sshd
    }
}